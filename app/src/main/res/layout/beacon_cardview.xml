<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin2x"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/cardRadius"
    app:cardElevation="@dimen/cardElevation"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:showIn="@layout/activity_main">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/default_margin">

        <TextView
            android:id="@+id/labelRegion"
            style="@style/defaultLabel"
            android:text="@string/labelRegion"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/textViewRegion"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            app:layout_constraintStart_toEndOf="@+id/labelRegion"
            app:layout_constraintTop_toTopOf="@+id/labelRegion"
            tools:text="23B"/>

        <TextView
            android:id="@+id/labelPlace"
            style="@style/defaultLabel"
            android:text="@string/labelPlace"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/labelRegion"/>

        <TextView
            android:id="@+id/textViewPlace"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            app:layout_constraintStart_toEndOf="@+id/labelPlace"
            app:layout_constraintTop_toTopOf="@+id/labelPlace"
            tools:text="RecepÃ§ao"/>

        <TextView
            android:id="@+id/labelDexcription"
            style="@style/defaultLabel"
            android:text="@string/labelDescription"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/labelPlace"/>

        <TextView
            android:id="@+id/textViewDescription"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            app:layout_constraintStart_toEndOf="@+id/labelDexcription"
            app:layout_constraintTop_toTopOf="@+id/labelDexcription"
            tools:text="Loremm Ipsum"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>